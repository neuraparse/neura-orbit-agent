# Neura-Orbit-Agent Environment Configuration
# Copy this file to .env and fill in your actual values

# =============================================================================
# LLM API Keys
# =============================================================================

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_ORG_ID=your_openai_org_id_here  # Optional

# Anthropic Configuration
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# =============================================================================
# Ollama Configuration
# =============================================================================

# Ollama server URL (default: http://localhost:11434)
OLLAMA_BASE_URL=http://localhost:11434

# =============================================================================
# Application Settings
# =============================================================================

# Environment (development, staging, production)
ENVIRONMENT=development

# Log level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Log file path (optional, defaults to logs/neura-orbit.log)
LOG_FILE_PATH=logs/neura-orbit.log

# =============================================================================
# Security Settings
# =============================================================================

# Require user confirmation for destructive actions (true/false)
REQUIRE_CONFIRMATION=true

# Enable audit logging (true/false)
ENABLE_AUDIT_LOG=true

# Audit log file path
AUDIT_LOG_PATH=logs/audit.log

# =============================================================================
# Screen Capture Settings
# =============================================================================

# Default screen capture interval in seconds
SCREEN_CAPTURE_INTERVAL=1.0

# Monitor to capture (0 for primary, -1 for all)
SCREEN_MONITOR=0

# Screenshot quality (1-100)
SCREENSHOT_QUALITY=85

# =============================================================================
# Automation Settings
# =============================================================================

# Default browser for web automation (chrome, firefox, safari, edge)
DEFAULT_BROWSER=chrome

# Browser headless mode (true/false)
BROWSER_HEADLESS=false

# Default timeout for automation actions in seconds
AUTOMATION_TIMEOUT=30

# =============================================================================
# API Settings
# =============================================================================

# API server host
API_HOST=localhost

# API server port
API_PORT=8000

# Enable API authentication (true/false)
API_AUTH_ENABLED=false

# API secret key (generate a secure random string)
API_SECRET_KEY=your_secret_key_here

# =============================================================================
# Database Settings (if using database for logging/state)
# =============================================================================

# Database URL (sqlite, postgresql, mysql)
DATABASE_URL=sqlite:///data/neura_orbit.db

# =============================================================================
# Performance Settings
# =============================================================================

# Maximum concurrent tasks
MAX_CONCURRENT_TASKS=5

# Memory limit for image processing (MB)
IMAGE_PROCESSING_MEMORY_LIMIT=512

# Cache directory
CACHE_DIR=cache

# =============================================================================
# Development Settings
# =============================================================================

# Enable debug mode (true/false)
DEBUG=false

# Enable hot reload for development (true/false)
HOT_RELOAD=false

# Profiling enabled (true/false)
PROFILING_ENABLED=false
